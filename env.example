# ============================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ============================================
APP_ENVIRONMENT=development
APP_NAME="Sistema de Advocacia"
APP_SUBNAME="Gestão de Processos"
APP_BASEURL=http://localhost/
APP_TIMEZONE=America/Sao_Paulo
APP_CHARSET=UTF-8
APP_ENCRYPTION_KEY=

# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ============================================
DB_DSN=
DB_HOSTNAME=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=advocacia
DB_DRIVER=mysqli
DB_PREFIX=
DB_CHARSET=utf8
DB_COLLATION=utf8_general_ci

# ============================================
# CONFIGURAÇÕES DE SESSÃO
# ============================================
APP_SESS_DRIVER=database
APP_SESS_COOKIE_NAME=ci_session
APP_SESS_EXPIRATION=7200
APP_SESS_SAVE_PATH=ci_sessions
APP_SESS_MATCH_IP=false
APP_SESS_TIME_TO_UPDATE=300

# ============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ============================================
APP_CSRF_PROTECTION=true
APP_CSRF_TOKEN_NAME=csrf_test_name
APP_CSRF_COOKIE_NAME=csrf_cookie_name
APP_CSRF_EXPIRE=7200
APP_CSRF_REGENERATE=true
GLOBAL_XSS_FILTERING=true

# ============================================
# CONFIGURAÇÕES DE COOKIES
# ============================================
APP_COOKIE_PREFIX=
APP_COOKIE_DOMAIN=
APP_COOKIE_PATH=/
APP_COOKIE_SECURE=false
APP_COOKIE_HTTPONLY=true

# ============================================
# CONFIGURAÇÕES DE PERFORMANCE
# ============================================
APP_COMPRESS_OUTPUT=false
APP_PROXY_IPS=

# ============================================
# CONFIGURAÇÕES DE EMAIL
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

# ============================================
# API CNJ (Consulta Processual)
# ============================================
API_CNJ_KEY=
